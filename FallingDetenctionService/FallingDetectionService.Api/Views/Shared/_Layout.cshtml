<!doctype html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - FallingDetectionService</title>

    <!-- Bootstrap CSS (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

</head>
<body class="bg-light">

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
        <a class="navbar-brand" href="/">FallingDetectionService</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="nav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item"><a class="nav-link" href="/">Dashboard</a></li>
                <li class="nav-item"><a class="nav-link" href="/SitesUi/Create">Create Site</a></li>
                <li class="nav-item"><a class="nav-link" href="/IncidentsUi">Incidents</a></li>
                <li class="nav-item"><a class="nav-link" href="/SitesUi">Sites</a></li>

            </ul>
        </div>
    </div>
</nav>

<main class="container py-4">

    @* Глобальне відображення помилок ModelState *@
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <div class="fw-semibold mb-1">Помилки:</div>
            <ul class="mb-0">
                @foreach (var entry in ViewData.ModelState)
                {
                    foreach (var err in entry.Value.Errors)
                    {
                        <li>@err.ErrorMessage</li>
                    }
                }
            </ul>
        </div>
    }

    @RenderBody()
</main>

<footer class="border-top py-3 bg-white">
    <div class="container text-muted small">
        FallingDetectionService • Demo UI
    </div>
</footer>

<!-- Bootstrap JS (CDN) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

@RenderSection("Scripts", required: false)
</body>
</html>