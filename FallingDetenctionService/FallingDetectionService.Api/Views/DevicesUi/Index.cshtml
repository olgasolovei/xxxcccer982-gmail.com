@model FallingDetectionService.Domain.Device
@{
    Layout = "_Layout";
    ViewData["Title"] = "Device";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="h5 mb-1">Device</h1>
        <div class="text-muted small font-monospace">@Model.Id</div>
    </div>

    <div class="d-flex gap-2">
        <a class="btn btn-outline-secondary"
           href="/SitesUi/Index?id=@Model.SiteId">
            Back to Site
        </a>
    </div>
</div>

<div class="row g-3">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="text-muted small">SourceId</div>
                        <div class="font-monospace">@Model.SourceId</div>
                    </div>

                    <div class="col-md-6">
                        <div class="text-muted small">Type</div>
                        <div>
                            <span class="badge text-bg-secondary">@Model.Type</span>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="text-muted small">SiteId</div>
                        <div class="font-monospace small">@Model.SiteId</div>
                    </div>

                    <div class="col-12">
                        <div class="text-muted small">Metadata</div>
                        @if (string.IsNullOrWhiteSpace(Model.Metadata))
                        {
                            <div class="text-muted">No metadata</div>
                        }
                        else
                        {
                            <pre class="bg-light border rounded-3 p-3 mb-0"
                                 style="white-space: pre-wrap; word-break: break-word;">@Model.Metadata</pre>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="fw-semibold mb-2">Actions</div>

                <div class="d-grid gap-2">
                    <a class="btn btn-outline-primary"
                       href="/IncidentsUi/Create?siteId=@Model.SiteId">
                        Create Incident (Demo)
                    </a>

                    <a class="btn btn-outline-secondary"
                       href="/IncidentsUi?siteId=@Model.SiteId">
                        View Incidents
                    </a>
                </div>

                <hr />

                <div class="text-muted small">
                    Device використовується як джерело інцидентів (sourceId).
                </div>
            </div>
        </div>
    </div>
</div>
