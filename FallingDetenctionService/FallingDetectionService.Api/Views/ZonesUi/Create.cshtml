@model FallingDetectionService.Api.ViewModels.Zones.CreateZoneVm
@{
    Layout = "_Layout";
    ViewData["Title"] = "Create Zone";
}

<div class="row justify-content-center">
    <div class="col-lg-7">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <h2 class="h5 mb-0">Create Zone</h2>
                    <a class="btn btn-sm btn-outline-secondary" href="/SitesUi/Index?id=@Model.SiteId">Back to Site</a>
                </div>

                <div class="alert alert-info py-2 small mb-3">
                    <span class="fw-semibold">SiteId:</span> <span class="font-monospace">@Model.SiteId</span>
                </div>

                <form method="post" class="row g-3">
                    <input type="hidden" asp-for="SiteId" />

                    <div class="col-12">
                        <label class="form-label">Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Zone A" />
                        <div class="text-danger small"><span asp-validation-for="Name"></span></div>
                    </div>

                    <div class="col-12 d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Create</button>
                        <a class="btn btn-outline-secondary" href="/SitesUi/Index?id=@Model.SiteId">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>