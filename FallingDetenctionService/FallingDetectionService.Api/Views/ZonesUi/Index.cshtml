@model FallingDetectionService.Domain.Zone
@{
    Layout = "_Layout";
    ViewData["Title"] = "Zone";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="h5 mb-1">Zone</h1>
        <div class="text-muted small font-monospace">@Model.Id</div>
    </div>

    <div class="d-flex gap-2">
        <a class="btn btn-outline-secondary"
           href="/SitesUi/Index?id=@Model.SiteId">
            Back to Site
        </a>
    </div>
</div>

<div class="row g-3">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="text-muted small">Name</div>
                        <div class="fw-semibold">@Model.Name</div>
                    </div>

                    <div class="col-md-6">
                        <div class="text-muted small">SiteId</div>
                        <div class="font-monospace small">@Model.SiteId</div>
                    </div>

                    <div class="col-12">
                        <div class="text-muted small">ZoneId</div>
                        <div class="font-monospace">@Model.Id</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="fw-semibold mb-2">Actions</div>

                <div class="d-grid gap-2">
                    <a class="btn btn-outline-primary"
                       href="/IncidentsUi/Create?siteId=@Model.SiteId">
                        Create Incident (Demo)
                    </a>

                    <a class="btn btn-outline-secondary"
                       href="/IncidentsUi?siteId=@Model.SiteId">
                        View Incidents
                    </a>
                </div>

                <hr />

                <div class="text-muted small">
                    Zone — це конкретна ділянка всередині Site, де локалізується інцидент.
                </div>
            </div>
        </div>
    </div>
</div>
